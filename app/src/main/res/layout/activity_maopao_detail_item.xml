<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Commentlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_default_user" />

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/icon">

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/icon"
            android:layout_below="@+id/name"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="1dp"
            android:lineSpacingMultiplier="1.1"
            android:text="陈可辛果然是香港最成功的导演，从《投名状》、《十月围城》、《武侠》"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/font_black_content"
            android:textIsSelectable="true"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/layoutContent"
        android:layout_below="@id/layoutContent"
        android:layout_marginTop="10dp"
        android:text="超级小胖纸"
        android:textColor="@color/font_black_comment"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/name"
        android:drawableLeft="@drawable/ic_clock"
        android:drawablePadding="5dp"

        android:text="3分钟前"
        android:textColor="@color/font_gray"
        android:textSize="12sp" />

</RelativeLayout>
