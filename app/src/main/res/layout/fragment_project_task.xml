<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".project.detail.ProjectTaskFragment">


    <net.coding.program.third.MyPagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="77dip"
        android:background="@android:color/transparent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pagerProjectTask"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/blankLayout"
        layout="@layout/view_exception"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
